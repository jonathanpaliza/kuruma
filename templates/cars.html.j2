{% extends "layout.html"%}

{% block content %}
    <div class="container-fluid">
        <h1 class="text-center p-5">Cars</h1>
        <div class="container-sm rounded col-12 text-center">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Year</th>
                        <th scope="col">Make</th>
                        <th scope="col">Model</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for car in cars %}  
                        <tr>
                            <td>{{ car.year }}</td>
                            <td>{{ car.make }}</td>
                            <td>{{ car.model }}</td>
                            <td>
                                <a class="btn btn-danger ms-1" href="/delete/{{ car.id }}">Delete</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock content %}